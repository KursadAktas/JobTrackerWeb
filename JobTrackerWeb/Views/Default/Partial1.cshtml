@model List<JobTrackerWeb.Models.Messages>

<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
        <i class="fa fa-comment-o"></i><span class="badge blue">@ViewBag.m1</span>
    </a>
    <ul class="dropdown-menu">
        <li>
            <div class="notification_header">
                <h3>Toplam Mesaj Sayınız: @ViewBag.m1</h3>
            </div>
        </li>
        @foreach (var item in Model)
        {


        <li>
            <a href="#" class="grid">
                <div class="user_img"><img src="@item.Companies.Image" alt=""></div>
                <div class="notification_desc">
                    <p>@item.Companies.Name</p>
                    <span>@item.Subject</span>
                </div>
            </a>
        </li>
        }
        <li>
            <div class="notification_bottom">
                <a href="/Default/Messages" class="bg-primary">Tüm Mesajları Gör</a>
            </div>
        </li>
    </ul>
</li>
